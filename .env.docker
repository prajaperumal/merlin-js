# Docker Environment Configuration for Merlin
# Copy this file to .env.docker.local and fill in your actual values

# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Session Configuration (generate a random secret)
SESSION_SECRET=your_random_session_secret_here_minimum_32_characters

# Database Configuration (Docker Compose handles this)
DATABASE_URL=postgresql://merlin:merlin_password@postgres:5432/merlin

# Server Configuration
PORT=8000
NODE_ENV=production
